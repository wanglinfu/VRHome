<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/app_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/app_layout_selector">

        <in.srain.cube.image.CubeImageView
            android:id="@+id/app_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="1dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_toLeftOf="@+id/app_download"
            android:layout_toRightOf="@+id/app_icon"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应用名称"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/app_score"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:scaleType="fitStart"
                android:src="@drawable/star5" />

            <TextView
                android:id="@+id/app_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_browse"
                android:textColor="@color/lightgrayColor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/app_typename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="射击竞速"
                android:textColor="@color/lightgrayColor"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/app_download"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_radius_blue_style"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
