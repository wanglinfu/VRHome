<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryDark">@color/common_app_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="XListViewProgressBarSmall" parent="@android:style/Widget.ProgressBar">
        <item name="android:maxWidth">30dp</item>
        <item name="android:maxHeight">30dp</item>
        <item name="android:indeterminateDrawable">@drawable/xlistview_progress_bar</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:minHeight">30dp</item>
    </style>


    <style name="XListViewProgressBarLarge" parent="@android:style/Widget.ProgressBar">
        <item name="android:maxWidth">40dp</item>
        <item name="android:maxHeight">40dp</item>
        <item name="android:indeterminateDrawable">@drawable/xlistview_progress_bar</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="IV_MarketTabTip">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:src">@drawable/mark_tip</item>
    </style>


    <style name="TitleBar">
        <item name="android:layout_height">@dimen/title_bar_height</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@color/common_app_color</item>
    </style>

    <!-- 标题 -->
    <style name="ToggleButton" parent="@android:style/Widget.CompoundButton">
        <item name="android:button">@drawable/setting_togglebutton</item>
    </style>

    <style name="TV.Title" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
    </style>

    <style name="titleBar_back">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:src">@drawable/icon_base_back</item>
    </style>

    <style name="common_black_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="common_gray_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lightgrayColor</item>
    </style>

    <style name="common_edit_text">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/textview_radius_white_style</item>
    </style>

    <style name="common_ellipsize_text">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="film_seekbar" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/seekbar_horizontal</item>
        <item name="android:thumb">@drawable/cursor</item>
    </style>

    <style name="panorama_menu2" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/bg_toast</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="panorama_city_hint" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cube_mints_666666</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:background">@color/borderColor</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	 <declare-styleable name="ProgressRelativeLayout">
        <attr name="progressBackground" format="color"/>
        <attr name="progress" format="boolean"/>
    </declare-styleable>

    <style name="search_result_textview" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cube_mints_666666</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">3dp</item>
    </style>


    <!--自定义弹出框风格-->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_buttom_out</item>
    </style>

    <style name="MyDialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item>
        <!--半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!--无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>


</resources>
